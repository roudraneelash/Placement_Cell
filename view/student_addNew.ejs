<div class="student-form">
  <h1>Student Form</h1>
  <p>Add Student Details</p>
  <form action="/students/create" method="post">
    <div class="form-group">
      <label for="studentName">Student Name</label>
      <input
        type="text"
        class="form-control"
        id="studentName"
        name="studentName"
        placeholder="Enter student name"
        required
      />
    </div>
    <div class="form-group">
      <label for="studentEmail">Student Email</label>
      <input
        type="email"
        class="form-control"
        id="studentEmail"
        name="studentEmail"
        placeholder="Enter student email"
        required
      />
    </div>
    <div class="form-group">
      <label for="studentCollege">Student College</label>
      <input
        type="text"
        class="form-control"
        id="studentCollege"
        name="studentCollege"
        placeholder="Enter student college"
        required
      />
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="placementStatus">Placement Status</label>
        <select
          id="placementStatus"
          name="placementStatus"
          class="form-control"
          required
        >
          <option>Placed</option>
          <option>Not Placed</option>
        </select>
      </div>
      <div class="form-group col-md-6">
        <label for="batchInput">Batch</label>
        <input
          type="text"
          class="form-control"
          id="batchInput"
          name="batchInput"
          placeholder="Enter batch"
          required
        />
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="dsaScore">DSA Score</label>
        <input
          type="text"
          class="form-control"
          id="dsaScore"
          name="dsaScore"
          placeholder="Enter DSA score"
          required
        />
      </div>
      <div class="form-group col-md-4">
        <label for="webdevScore">WebDev Score</label>
        <input
          type="text"
          class="form-control"
          id="webdevScore"
          name="webdevScore"
          placeholder="Enter WebDev score"
          required
        />
      </div>
      <div class="form-group col-md-4">
        <label for="reactScore">React Score</label>
        <input
          type="text"
          class="form-control"
          id="reactScore"
          name="reactScore"
          placeholder="Enter React score"
          required
        />
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
